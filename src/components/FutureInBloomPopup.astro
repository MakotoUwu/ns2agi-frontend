<style>
  @keyframes glow {
    0%, 100% {
      opacity: 0.05;
      transform: scale(1);
    }
    50% {
      opacity: 0.15;
      transform: scale(1.1);
    }
  }

  .animate-glow {
    animation: glow 8s ease-in-out infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  .animation-delay-6000 {
    animation-delay: 6s;
  }

  @keyframes float-petal {
    0% {
      transform: translateY(0) rotate(0deg) translateX(0);
      opacity: 0.2;
    }
    25% {
      transform: translateY(-15px) rotate(90deg) translateX(10px);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-25px) rotate(180deg) translateX(-5px);
      opacity: 0.25;
    }
    75% {
      transform: translateY(-15px) rotate(270deg) translateX(15px);
      opacity: 0.3;
    }
    100% {
      transform: translateY(0) rotate(360deg) translateX(0);
      opacity: 0.2;
    }
  }

  .animate-float-petal {
    animation: float-petal 12s ease-in-out infinite;
  }

  #bloom-popup-overlay.show {
    opacity: 1;
    pointer-events: auto;
  }

  #bloom-popup-overlay.show #bloom-popup-content {
    transform: scale(1);
  }

  /* Mobile optimization */
  @media (max-width: 640px) {
    #bloom-popup-content {
      max-height: 90vh;
      overflow-y: auto;
    }
  }
</style>

<script>
  const POPUP_KEY = 'future_bloom_popup_shown';
  const POPUP_DELAY = 0;

  function showPopup() {
    const overlay = document.getElementById('bloom-popup-overlay');
    if (overlay) {
      setTimeout(() => {
        overlay.classList.add('show');
      }, 100);
    }
  }

  function hidePopup() {
    const overlay = document.getElementById('bloom-popup-overlay');
    if (overlay) {
      overlay.classList.remove('show');
      sessionStorage.setItem(POPUP_KEY, 'true');
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const alreadyShown = sessionStorage.getItem(POPUP_KEY);

    if (!alreadyShown) {
      setTimeout(() => {
        showPopup();
      }, POPUP_DELAY);
    }

    const closeButton = document.getElementById('bloom-popup-close');
    if (closeButton) {
      closeButton.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        hidePopup();
      });
    }

    const dismissButton = document.getElementById('bloom-popup-dismiss');
    if (dismissButton) {
      dismissButton.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        hidePopup();
      });
    }

    const overlay = document.getElementById('bloom-popup-overlay');
    if (overlay) {
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) {
          hidePopup();
        }
      });
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        const overlay = document.getElementById('bloom-popup-overlay');
        if (overlay && overlay.classList.contains('show')) {
          hidePopup();
        }
      }
    });
  });
</script>
