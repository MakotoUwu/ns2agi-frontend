---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <!-- Navigation -->
    <nav class="absolute top-0 left-0 right-0 z-50 flex justify-between items-center p-6">
        <a href="/" class="text-lg font-bold tracking-wide text-black hover:text-gray-800 transition-colors">
            ‚Üê NORTH STAR AGI
        </a>
        <div class="text-sm font-medium text-black">
            1000+ GLOBAL PARTICIPANTS
        </div>
    </nav>

    <div class="min-h-screen relative bg-cover bg-center bg-no-repeat flex items-center justify-center" style="background-image: url('/lerobot.png');">
        <div class="absolute inset-0 bg-gradient-to-br from-orange-500/70 via-yellow-400/70 to-orange-600/70"></div>
        
        <div class="relative z-10 text-center text-black max-w-4xl px-8">
            
            <!-- Partnership Badge -->
            <div class="mb-12 animate-fade-in">
                <div class="inline-block px-6 py-3 bg-black/10 backdrop-blur-sm rounded-full border border-black/20">
                    <p class="text-base font-bold tracking-wide">HUGGING FACE √ó LEROBOT</p>
                </div>
            </div>
            
            <!-- Main Title -->
            <div class="mb-16 animate-fade-in-delay-1">
                <h1 class="text-7xl md:text-9xl font-bold tracking-tighter mb-8 leading-none">
                    WORLDWIDE<br/>
                    ROBOTICS<br/>
                    HACKATHON
                </h1>
                <p class="text-3xl md:text-4xl font-light tracking-[0.3em] uppercase mb-4">
                    June 14-15, 2025
                </p>
                <p class="text-xl font-bold text-red-700">
                    $15,000 GLOBAL PRIZES
                </p>
            </div>

            <!-- Description -->
            <div class="mb-16 animate-fade-in-delay-2">
                <p class="text-xl md:text-2xl leading-relaxed max-w-3xl mx-auto font-medium">
                    Join the largest robotics hackathon in history. Build the future of robotics in Antwerp alongside 1000+ participants worldwide. Be part of robotics' ChatGPT moment.
                </p>
                <p class="text-lg mt-6 font-semibold">
                    üìç The Beacon Innovation Community, Antwerp<br/>
                    üèÜ Brand new research robotic arm for best local solution
                </p>
            </div>

            <!-- CTA Button -->
            <div class="animate-fade-in-delay-3">
                <a
                    href="https://huggingface.co/LeRobot-worldwide-hackathon"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-16 py-6 bg-black text-white font-bold text-xl rounded-full 
                           hover:bg-gray-800 hover:scale-105 
                           transition-all duration-300 shadow-2xl hover:shadow-black/50"
                >
                    JOIN THE HACKATHON
                    <svg class="w-6 h-6 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </a>
            </div>

            <!-- Additional Info -->
            <div class="mt-12 animate-fade-in-delay-4">
                <p class="text-sm text-black/70 leading-relaxed">
                    No robotics experience required ‚Ä¢ Teams of 1-5 people ‚Ä¢ Hardware optional<br/>
                    <span class="font-medium">Registration closes soon</span>
                </p>
            </div>
        </div>
    </div>
</Layout>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in { animation: fade-in 1.2s ease-out forwards; }
    .animate-fade-in-delay-1 { animation: fade-in 1.2s ease-out 0.3s backwards; }
    .animate-fade-in-delay-2 { animation: fade-in 1.2s ease-out 0.6s backwards; }
    .animate-fade-in-delay-3 { animation: fade-in 1.2s ease-out 0.9s backwards; }
    .animate-fade-in-delay-4 { animation: fade-in 1.2s ease-out 1.2s backwards; }

    /* Remove scrollbar for cleaner look */
    body {
        overflow-x: hidden;
    }
</style> 