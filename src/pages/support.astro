---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Support - North Star AGI">
  <div class="min-h-screen bg-black text-white">
    <div class="container mx-auto px-4 py-20 max-w-4xl">
      
      <!-- Header Section -->
      <div class="text-center mb-16">
        <div class="mb-8">
          <img src="/rmshine.png" alt="North Star AGI" class="w-24 h-24 mx-auto object-contain animate-fade-in"/>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white animate-fade-in-delay-1">
          Support Our Mission
        </h1>
        <p class="text-xl text-white/80 max-w-2xl mx-auto animate-fade-in-delay-2">
          Help us build the future of AI and robotics through community-driven innovation
        </p>
      </div>

      <!-- Support Options Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        
        <!-- Donation Section -->
        <div class="bg-white/5 backdrop-blur-sm border border-white/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 animate-fade-in-delay-3">
          <div class="text-center">
            <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
            <h2 class="text-2xl font-bold mb-4">Donate</h2>
            <p class="text-white/80 mb-6">
              Support our events and community initiatives
            </p>
            <a 
              href="https://ko-fi.com/ns2agi" 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-8 py-4 bg-red-600 text-white font-bold rounded-full hover:bg-red-700 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.881 8.948c-.773-4.085-4.859-4.593-4.859-4.593H.723c-.604 0-.679.798-.679.798s-.082 7.324-.022 11.822c.164 2.424 2.586 2.672 2.586 2.672s8.267-.023 11.966-.049c2.438-.017 2.884-2.438 2.884-2.438s.771-3.908.771-4.514c0-.608-.126-1.796-.126-1.796s.882.575 1.021.852c1.158 2.348 1.716 4.896 1.716 4.896s.504 1.143 1.121.996c.617-.146 1.193-1.913 1.193-1.913s-1.069-2.531-1.069-2.531z"/>
              </svg>
              Support on Ko-fi
            </a>
          </div>
        </div>

        <!-- Let's Talk Section -->
        <div class="bg-white/5 backdrop-blur-sm border border-white/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 animate-fade-in-delay-4">
          <div class="text-center">
            <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
            </div>
            <h2 class="text-2xl font-bold mb-4">Let's Talk!</h2>
            <p class="text-white/80 mb-6">
              Schedule a call to discuss collaboration opportunities
            </p>
            <a 
              href="https://calendly.com/filipn924/30min" 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-8 py-4 bg-blue-600 text-white font-bold rounded-full hover:bg-blue-700 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              Schedule Meeting
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Section -->
      <div class="bg-white/5 backdrop-blur-sm border border-white/20 rounded-2xl p-8 mb-16 animate-fade-in-delay-5">
        <div class="text-center">
          <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold mb-4">Contact Us</h2>
          <p class="text-white/80 mb-6">
            Have questions or want to get involved?
          </p>
          <a 
            href="mailto:contact@ns2agi.com"
            class="inline-flex items-center justify-center px-8 py-4 bg-green-600 text-white font-bold rounded-full hover:bg-green-700 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
            </svg>
            contact@ns2agi.com
          </a>
        </div>
      </div>

      <!-- Sponsorship Section -->
      <div class="bg-white/5 backdrop-blur-sm border border-white/20 rounded-2xl p-8 animate-fade-in-delay-5">
        <div class="text-center">
          <div class="w-20 h-20 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-8">
            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h2 class="text-3xl font-bold mb-4 text-yellow-400">Core Sponsorship</h2>
          <p class="text-white/90 mb-6 text-lg">
            Become a core sponsor and get your brand featured on our website
          </p>
          
          <!-- Sponsorship Details -->
          <div class="max-w-2xl mx-auto">
            <div class="bg-black/30 rounded-xl p-6 mb-6">
              <div class="flex items-center justify-center mb-4">
                <span class="text-4xl font-bold text-yellow-400">â‚¬1,000</span>
                <span class="text-white/80 ml-2">/ 6 months</span>
              </div>
              <div class="space-y-3 text-left">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-green-400 mr-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class="text-white/90">Logo placement on our website</span>
                </div>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-green-400 mr-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class="text-white/90">Recognition at our events</span>
                </div>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-green-400 mr-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class="text-white/90">Social media mentions</span>
                </div>
              </div>
            </div>
            
            <a 
              href="mailto:contact@ns2agi.com?subject=Core%20Sponsorship%20Inquiry"
              class="inline-flex items-center justify-center px-8 py-4 bg-yellow-500 text-black font-bold rounded-full hover:bg-yellow-600 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
              </svg>
              Become a Sponsor
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout> 