---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Support - North Star AGI">
  <div class="min-h-screen bg-black text-white">
    <div class="container mx-auto px-4 py-20 max-w-6xl">
      
      <!-- Hero Section -->
      <div class="text-center mb-20">
        <div class="mb-8">
          <img src="/rmshine.png" alt="North Star AGI" class="w-24 h-24 mx-auto object-contain animate-fade-in"/>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white animate-fade-in-delay-1">
          Work With Us
        </h1>
        <p class="text-xl text-white/80 max-w-3xl mx-auto animate-fade-in-delay-2 font-mono">
          Access top talent. Build together. Ship faster.
        </p>
      </div>

      <!-- Event Sponsorships -->
      <div class="mb-32">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">Event Sponsorships</h2>
        </div>
        
        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Silver Tier -->
          <div class="group relative">
            <div class="bg-gradient-to-br from-gray-300/5 to-gray-400/10 backdrop-blur-sm rounded-3xl p-8 h-full border border-white/10 hover:border-white/30 transition-all duration-500 hover:shadow-xl hover:shadow-gray-500/5">
              <div class="text-center mb-8">
                <div class="w-20 h-20 mx-auto mb-6 flex items-center justify-center">
                  <img src="/partnerships/icons/silver.svg" alt="Silver" class="w-16 h-16 filter brightness-110" />
                </div>
                <h3 class="text-2xl font-bold text-white mb-3">Silver</h3>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-gray-300 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Social media post</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-gray-300 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Event shoutout</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-gray-300 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Bring your branding</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Gold Tier -->
          <div class="group relative">
            <div class="bg-gradient-to-br from-yellow-400/5 to-yellow-500/10 backdrop-blur-sm rounded-3xl p-8 h-full border border-white/10 hover:border-white/20 transition-all duration-500">
              <div class="text-center mb-8">
                <div class="w-20 h-20 mx-auto mb-6 flex items-center justify-center">
                  <img src="/partnerships/icons/gold.svg" alt="Gold" class="w-16 h-16 filter brightness-110" />
                </div>
                <h3 class="text-2xl font-bold text-white mb-3">Gold</h3>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-yellow-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Everything in Silver</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-yellow-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">3 minute pitch (3 spots)</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-yellow-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Post event recap</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Diamond Tier -->
          <div class="group relative">
            <div class="bg-gradient-to-br from-blue-400/5 to-blue-500/10 backdrop-blur-sm rounded-3xl p-8 h-full border border-white/10 hover:border-white/20 transition-all duration-500">
              <div class="text-center mb-8">
                <div class="w-20 h-20 mx-auto mb-6 flex items-center justify-center">
                  <img src="/partnerships/icons/diamond.svg" alt="Diamond" class="w-16 h-16 filter brightness-110" />
                </div>
                <h3 class="text-2xl font-bold text-white mb-3">Diamond</h3>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Everything in Gold</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Talent shortlist access</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Solution reporting</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Targeted hiring support</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- CORE Sponsorship -->
      <div class="mb-32">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">Core Partnership (Long term)</h2>
        </div>
        
        <div class="grid lg:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <!-- CORE Gold -->
          <div class="group relative">
            <div class="bg-gradient-to-br from-yellow-400/5 to-yellow-500/10 backdrop-blur-sm rounded-3xl p-8 h-full border border-white/10 hover:border-white/20 transition-all duration-500">
              <div class="text-center mb-8">
                <div class="w-20 h-20 mx-auto mb-6 flex items-center justify-center">
                  <img src="/partnerships/icons/gold.svg" alt="Gold" class="w-16 h-16 filter brightness-110" />
                </div>
                <h3 class="text-2xl font-bold text-white mb-3">Gold Core</h3>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-yellow-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Prominent logo placement</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-yellow-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Strategic co-marketing</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-yellow-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Event collaboration</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- CORE Diamond -->
          <div class="group relative">
            <div class="bg-gradient-to-br from-blue-400/5 to-blue-500/10 backdrop-blur-sm rounded-3xl p-8 h-full border border-white/10 hover:border-blue-400/30 transition-all duration-500 hover:shadow-xl hover:shadow-blue-400/5">
              <div class="text-center mb-8">
                <div class="w-20 h-20 mx-auto mb-6 flex items-center justify-center">
                  <img src="/partnerships/icons/diamond.svg" alt="Diamond" class="w-16 h-16 filter brightness-110" />
                </div>
                <h3 class="text-2xl font-bold text-white mb-3">Diamond Core</h3>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Bespoke partnership terms</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Co-branded initiatives</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Executive collaboration</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                  <p class="text-white/90">Let's talk!</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- WILDCARD Section -->
      <div class="mb-32">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">WILDCARD</h2>
        </div>
        
        <div class="max-w-4xl mx-auto">
          <div class="bg-gradient-to-br from-cyan-500/5 to-purple-500/10 backdrop-blur-sm rounded-3xl p-12 border border-white/10 hover:border-white/20 transition-all duration-500">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
              <div>
                <h3 class="text-2xl font-bold text-white mb-6">Think Outside the Box</h3>
                <div class="space-y-4 mb-8">
                  <div class="flex items-start space-x-3">
                    <div class="w-2 h-2 bg-cyan-400 rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-white/90">Entertainment & Media projects</p>
                  </div>
                  <div class="flex items-start space-x-3">
                    <div class="w-2 h-2 bg-purple-400 rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-white/90">AI & Robotics consulting</p>
                  </div>
                  <div class="flex items-start space-x-3">
                    <div class="w-2 h-2 bg-cyan-400 rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-white/90">Custom workshops & training</p>
                  </div>
                  <div class="flex items-start space-x-3">
                    <div class="w-2 h-2 bg-purple-400 rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-white/90">Rapid proof of concepts</p>
                  </div>
                  <div class="flex items-start space-x-3">
                    <div class="w-2 h-2 bg-cyan-400 rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-white/90">Non-profit? Let's see what we can do :)</p>
                  </div>
                </div>
              </div>
              <div class="text-center">
                <div class="mb-6">
                  <div class="w-24 h-24 mx-auto bg-gradient-to-br from-cyan-500/20 to-purple-500/20 rounded-full flex items-center justify-center border border-white/20">
                    <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                  </div>
                </div>
                <a 
                  href="mailto:filip@ns2agi.com?subject=WILDCARD%20Project%20Inquiry"
                  class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-cyan-500 to-purple-500 text-white font-bold rounded-full hover:from-cyan-400 hover:to-purple-400 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
                >
                  Let's Explore
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>


      <!-- Contact Section -->
      <div class="grid lg:grid-cols-2 gap-8 mb-20">
        <!-- Partnership Inquiry -->
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-3xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-center">
            <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4">Partnership Inquiry</h3>
            <p class="text-white/70 mb-6 font-mono">
              Ready to partner? Let's build something amazing together.
            </p>
            <a 
              href="mailto:filip@ns2agi.com?subject=Partnership%20Inquiry"
              class="inline-flex items-center justify-center px-8 py-4 bg-white text-black font-bold rounded-full hover:bg-gray-100 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
              </svg>
              Get in Touch
            </a>
          </div>
        </div>

        <!-- Community Support -->
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-3xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-center">
            <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4">Community Support</h3>
            <p class="text-white/70 mb-6 font-mono">
              Support our mission and help keep the lights on.
            </p>
            <a 
              href="https://ko-fi.com/ns2agi" 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-8 py-4 bg-red-600 text-white font-bold rounded-full hover:bg-red-700 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.881 8.948c-.773-4.085-4.859-4.593-4.859-4.593H.723c-.604 0-.679.798-.679.798s-.082 7.324-.022 11.822c.164 2.424 2.586 2.672 2.586 2.672s8.267-.023 11.966-.049c2.438-.017 2.884-2.438 2.884-2.438s.771-3.908.771-4.514c0-.608-.126-1.796-.126-1.796s.882.575 1.021.852c1.158 2.348 1.716 4.896 1.716 4.896s.504 1.143 1.121.996c.617-.146 1.193-1.913 1.193-1.913s-1.069-2.531-1.069-2.531z"/>
              </svg>
              Support on Ko-fi
            </a>
          </div>
        </div>
      </div>

      <!-- Call to Action -->
      <div class="bg-gradient-to-r from-white/5 to-white/10 backdrop-blur-sm border border-white/10 rounded-3xl p-12 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Let's Build the Future Together
        </h2>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="mailto:filip@ns2agi.com?subject=Partnership%20Inquiry"
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-black font-bold rounded-full hover:bg-gray-100 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
          >
            Start Partnership
          </a>
          <a 
            href="https://discord.gg/m5Hknymurb"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-8 py-4 bg-transparent text-white font-bold rounded-full border-2 border-white hover:bg-white hover:text-black transition-all duration-300 hover:scale-105"
          >
            Join Discord
          </a>
        </div>
      </div>

    </div>
  </div>
</Layout>
