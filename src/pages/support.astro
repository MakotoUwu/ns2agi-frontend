---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Support - North Star AGI">
  <div class="min-h-screen bg-black text-white">
    <div class="container mx-auto px-4 py-20 max-w-4xl">
      
      <!-- Header Section -->
      <div class="text-center mb-16">
        <div class="mb-8">
          <img src="/rmshine.png" alt="North Star AGI" class="w-24 h-24 mx-auto object-contain animate-fade-in"/>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white animate-fade-in-delay-1">
          Support Our Mission
        </h1>
        <p class="text-xl text-white/80 max-w-2xl mx-auto animate-fade-in-delay-2">
          Help us build the future of AI and robotics through community-driven innovation
        </p>
      </div>

      <!-- Donation Section -->
      <div class="max-w-2xl mx-auto mb-16">
        <div class="bg-white/5 backdrop-blur-sm border border-white/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 animate-fade-in-delay-3">
          <div class="text-center">
            <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            </div>
            <h2 class="text-2xl font-bold mb-4">Donate</h2>
            <p class="text-white/80 mb-6">
              Support our events and community initiatives
            </p>
            <a 
              href="https://ko-fi.com/ns2agi" 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-8 py-4 bg-red-600 text-white font-bold rounded-full hover:bg-red-700 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.881 8.948c-.773-4.085-4.859-4.593-4.859-4.593H.723c-.604 0-.679.798-.679.798s-.082 7.324-.022 11.822c.164 2.424 2.586 2.672 2.586 2.672s8.267-.023 11.966-.049c2.438-.017 2.884-2.438 2.884-2.438s.771-3.908.771-4.514c0-.608-.126-1.796-.126-1.796s.882.575 1.021.852c1.158 2.348 1.716 4.896 1.716 4.896s.504 1.143 1.121.996c.617-.146 1.193-1.913 1.193-1.913s-1.069-2.531-1.069-2.531z"/>
              </svg>
              Support on Ko-fi
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Section -->
      <div class="bg-white/5 backdrop-blur-sm border border-white/20 rounded-2xl p-8 mb-16 animate-fade-in-delay-5">
        <div class="text-center">
          <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold mb-4">Contact Us</h2>
          <p class="text-white/80 mb-6">
            Have questions or want to get involved?
          </p>
          <a 
            href="mailto:contact@ns2agi.com"
            class="inline-flex items-center justify-center px-8 py-4 bg-green-600 text-white font-bold rounded-full hover:bg-green-700 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
            </svg>
            contact@ns2agi.com
          </a>
        </div>
      </div>

    </div>
  </div>
</Layout> 