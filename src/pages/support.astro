---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Support - North Star AGI">
  <div class="min-h-screen bg-black text-white">
    <div class="container mx-auto px-4 py-20 max-w-4xl">
      
      
      <div class="text-center mb-20">
        <div class="mb-8">
          <img src="/rmshine.png" alt="North Star AGI" class="w-24 h-24 mx-auto object-contain animate-fade-in"/>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white animate-fade-in-delay-1">
          Support Our Mission
        </h1>
        <p class="text-xl text-white/80 max-w-3xl mx-auto animate-fade-in-delay-2 leading-relaxed">
          Help us build Europe's AI future, one community event at a time.
        </p>
      </div>

      
      <div class="text-center">
        <div class="backdrop-blur-sm rounded-3xl p-12 transition-all duration-300">
          <h3 class="text-3xl font-bold mb-6 text-white">Ready to Support Our Vision?</h3>
          <p class="text-white/70 mb-8 text-lg max-w-2xl mx-auto">
            Whether you want to sponsor an event, provide a venue, collaborate on an initiative, or explore other ways to support our mission - let's talk.
          </p>
          <a 
            href="mailto:filip@ns2agi.com?subject=Support%20North%20Star%20AGI"
            class="inline-flex items-center justify-center px-10 py-5 bg-white text-black font-bold text-lg rounded-full hover:bg-gray-100 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
          >
            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
            </svg>
            Get in Touch
          </a>
          <p class="text-white/50 text-sm mt-4">filip@ns2agi.com</p>
        </div>
      </div>

    </div>
  </div>
</Layout>
