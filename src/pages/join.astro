---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <!-- Simple Header with Logo -->
    <section class="py-12 bg-black text-white">
        <div class="container mx-auto px-6 max-w-4xl text-center">
            <!-- Logo -->
            <div class="mb-8">
                <div class="w-16 h-16 md:w-20 md:h-20 mx-auto mb-4 transition-transform duration-300 hover:scale-110 hover:rotate-12">
                    <img src="/rmshine.png" alt="North Star AGI" class="w-full h-full object-contain filter drop-shadow-2xl"/>
                </div>
            </div>
        </div>
    </section>

    <!-- Application Form -->
    <section class="py-8 bg-black text-white">
        <div class="container mx-auto px-6 max-w-6xl">
            <div class="bg-zinc-900 rounded-2xl p-8 border border-zinc-800">
                <iframe 
                    src="https://beaded-pineapple-898.notion.site/ebd/22fd61b47ae280f7bff5c94e04537806" 
                    width="100%" 
                    height="800" 
                    allowfullscreen
                    class="rounded-xl border-0"
                    loading="lazy">
                </iframe>
            </div>
        </div>
    </section>
</Layout>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .animate-fade-in { 
        animation: fade-in 1s ease-out forwards; 
    }
    .animate-fade-in-delay-1 { 
        animation: fade-in 1s ease-out 0.3s backwards; 
    }
    .animate-fade-in-delay-2 { 
        animation: fade-in 1s ease-out 0.6s backwards; 
    }
</style>

