---
import Layout from '../layouts/Layout.astro';

const speakers = [
  {
    name: "Daria Matviichuk & Samuel Berton",
    company: "Bugify",
    topic: "Collapse of modern software development",
    description: "With an explosion of code, an explosion of bugs is sure to follow - how can we handle this? This team is one of the winners of our first hackathon - home raised ‚úåÔ∏è",
    emoji: "ü™≤"
  },
  {
    name: "Thomas Huybrechts",
    company: "Researcher @ imec",
    topic: "Social Robotics + animatronic parrot demo!",
    description: "An exciting exploration into social robotics with live demonstrations featuring an animatronic parrot.",
    emoji: "ü§ñ"
  }
];


const eventPhotos = [
  'IMG_0533.jpg', 'IMG_0529.jpg', 'IMG_0519.jpg', 'IMG_0508.jpg', 
  'IMG_0494.jpg', 'IMG_0470.jpg', 'IMG_0469.jpg', 'IMG_0467.jpg',
  'IMG_0465.jpg', 'IMG_0461.jpg', 'IMG_0452.jpg', 'IMG_0448.jpg',
  'IMG_0443.jpg', 'IMG_0431.jpg', 'IMG_0429.jpg', 'IMG_0421.jpg'
];
---

<Layout>
  
  <section class="py-20 bg-black">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="text-center mb-16">
        <div class="mb-8">
          <img src="/rmshine.png" alt="North Star AGI" class="w-24 h-24 mx-auto object-contain animate-fade-in"/>
        </div>
        <div class="inline-block px-6 py-3 bg-white/10 backdrop-blur-sm rounded-full border border-white/20 mb-6 animate-fade-in-delay-1">
          <span class="text-sm font-medium text-white/90">EVENT RECAP</span>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white animate-fade-in-delay-2">
          SIGNAL I
        </h1>
        <p class="text-xl md:text-2xl text-white/80 mb-4 animate-fade-in-delay-3">
          AI Meetup - June 5, 2025
        </p>
        <div class="max-w-3xl mx-auto animate-fade-in-delay-4">
          <p class="text-lg text-white/70 leading-relaxed">
            Our first SIGNAL event brought together AI enthusiasts, researchers, and builders to explore the cutting edge of technology. Here's a look back at an amazing evening of insights and connections.
          </p>
        </div>
      </div>
    </div>
  </section>

  
  <section class="py-20 bg-black">
    <div class="container mx-auto px-4 max-w-6xl">
      
      
      <div class="mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-white">
          Featured Speakers
        </h2>
        
        <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          {speakers.map((speaker) => (
            <div class="backdrop-blur-sm bg-white/5 rounded-3xl p-8 shadow-lg border border-white/10 hover:border-white/20 transition-all duration-300">
              <div class="text-center mb-6">
                <div class="text-4xl mb-4">{speaker.emoji}</div>
                <h3 class="text-2xl font-bold text-white/95 mb-2">
                  {speaker.name}
                </h3>
                <p class="text-pink-400/90 font-medium text-lg mb-4">
                  {speaker.company}
                </p>
              </div>
              
              <div class="space-y-4">
                <h4 class="text-xl font-semibold text-white/90">
                  {speaker.topic}
                </h4>
                <p class="text-white/80 leading-relaxed">
                  {speaker.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>

      
      <div class="mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-white">
          Event Highlights
        </h2>
        
        <div class="backdrop-blur-sm bg-white/5 rounded-3xl p-8 shadow-lg border border-white/10 mb-8">
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {eventPhotos.map((photo, index) => (
              <div class="group relative overflow-hidden rounded-xl aspect-square bg-white/5 hover:scale-105 transition-transform duration-300">
                <img 
                  src={`/signal-i/${photo}`}
                  alt={`SIGNAL event`}
                  class="w-full h-full object-cover group-hover:opacity-90 transition-opacity duration-300"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="text-center">
          <p class="text-white/60 text-sm">
            Capturing the energy and connections from our first SIGNAL event
          </p>
        </div>
      </div>

      
      <div class="mb-16">
        <div class="backdrop-blur-sm bg-white/5 rounded-3xl p-8 md:p-12 shadow-lg border border-white/10 max-w-4xl mx-auto">
          <h3 class="text-2xl font-bold text-center mb-8 text-white">
            Event Impact
          </h3>
          
          <div class="grid md:grid-cols-3 gap-8 text-center">
            <div>
              <div class="text-3xl md:text-4xl font-bold text-pink-400 mb-2">60+</div>
              <p class="text-white/80">Attendees</p>
            </div>
            <div>
              <div class="text-3xl md:text-4xl font-bold text-pink-400 mb-2">2</div>
              <p class="text-white/80">Expert Speakers</p>
            </div>
            <div>
              <div class="text-3xl md:text-4xl font-bold text-pink-400 mb-2">1</div>
              <p class="text-white/80">Amazing Evening</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Smooth loading for images */
  img {
    transition: opacity 0.3s ease;
  }
  
  /* Ensure proper aspect ratio for gallery */
  .aspect-square {
    aspect-ratio: 1 / 1;
  }
</style> 