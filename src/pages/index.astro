---
import Layout from '../layouts/Layout.astro';
import EventsShowcase from '../components/EventsShowcase.astro';

const eventsData = [
  {
    id: 'signal-i',
    title: 'SIGNAL I',
    date: 'June 5, 2025',
    description: 'Our first SIGNAL AI meetup featuring expert speakers from Bugify and imec, exploring the collapse of modern software development and social robotics.',
    thumbnail: '/signal-i/IMG_0331.jpg',
    status: 'completed' as const
  },
  {
    id: 'signal-ii',
    title: 'SIGNAL II',
    date: 'August 21, 2025',
    description: 'Talks by AI and robotics experts, live demos, and networking with pizza & drinks at The Beacon.',
    thumbnail: '/signal-ii/signalii.png',
    status: 'upcoming' as const
  },
  {
    id: 'ai-hackathon-i',
    title: 'AI Hackathon I',
    date: 'March 8, 2025',
    description: 'Our first AI hackathon - hosted at The Beacon with over 60 participants',
    thumbnail: '/ai-hackathon-i/winners.jpeg',
    status: 'completed' as const
  },
  {
    id: 'ai-hackathon-ii',
    title: 'AI Hackathon II',
    date: 'May 10, 2025',
    description: 'The 2nd edition - bigger and better!',
    thumbnail: '/ai-hackathon-ii/winners.jpg',
    status: 'completed' as const
  },
  {
    id: 'ai-hackathon-iii',
    title: 'AI Hackathon III',
    date: 'August 30, 2025',
    description: 'Our flagship hackathon returns at The Beacon. Students skip screening, pros ship side projects, companies scout talent. 09:00â€“19:00. Food & drinks provided.',
    thumbnail: '/ai-hackathon-iii/aihackathoniii.png',
    status: 'upcoming' as const
  },
  {
    id: 'robotics-hackathon-i',
    title: 'Robotics Hackathon I',
    date: 'June 14-15, 2025',
    description: 'Our first 2-day hackathon co-organized with HuggingFace',
    thumbnail: '/robotics-i/LeRobot Hackathon June 14-15 2025 (1).JPG',
    status: 'completed' as const
  }
];
---

<Layout>
 

    <!-- Hero Section - North Star -->
    <section id="hero" class="h-screen relative overflow-hidden flex flex-col justify-center bg-black text-white">
        <main class="flex flex-col justify-center items-center text-center space-y-6 px-4 py-20">
            <!-- North Star -->
            <div class="relative mb-8">
                <div class="w-16 h-16 md:w-24 md:h-24 mx-auto mb-4">
                    <img src="/rmshine.png" alt="North Star AGI" class="w-full h-full object-contain filter drop-shadow-2xl"/>
                </div>
            </div>

            <h1 class="text-4xl md:text-6xl font-bold tracking-wider animate-fade-in">
                north star agi
            </h1>
            <p class="text-lg md:text-xl text-white/90 animate-fade-in-delay-1">
                reach the north star
            </p>
            <p class="text-xs text-white/70 animate-fade-in-delay-2">
                founded 1st january 2025
            </p>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 animate-fade-in-delay-3">
                <a
                    href="#calendar"
                    class="inline-flex items-center justify-center px-8 py-4 bg-white text-black font-bold rounded-full hover:bg-gray-100 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
                >
                    VIEW CALENDAR
                </a>
                <a
                    href="/support"
                    class="inline-flex items-center justify-center px-8 py-4 bg-transparent text-white font-bold rounded-full border-2 border-white hover:bg-white hover:text-black transition-all duration-300 hover:scale-105"
                >
                    SPONSOR
                </a>
            </div>

            <!-- Social links -->
            <div class="flex space-x-6 animate-fade-in-delay-4">
                <a
                    href="https://discord.gg/m5Hknymurb"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-white/70 hover:text-white transition-colors duration-300"
                    aria-label="Discord"
                >
