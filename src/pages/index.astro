---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <div class="min-h-screen relative bg-cover bg-center bg-no-repeat flex items-center justify-center" style="background-image: url('/lerobot.png');">
        <div class="absolute inset-0 bg-gradient-to-br from-orange-500/80 via-yellow-400/80 to-orange-600/80"></div>
        <div class="relative z-10 text-center text-black">
            
            <!-- North Star AGI branding -->
            <div class="mb-8 animate-fade-in">
                <h1 class="text-2xl md:text-3xl font-bold tracking-wider mb-2">
                    north star agi
                </h1>
                <p class="text-lg text-black/80">
                    reach the north star
                </p>
            </div>

            <!-- Partnership Badge -->
            <div class="mb-12 animate-fade-in-delay-1">
                <div class="inline-block px-6 py-3 bg-black/10 backdrop-blur-sm rounded-full border border-black/20">
                    <p class="text-base font-bold tracking-wide">HUGGING FACE Ã— LEROBOT</p>
                </div>
            </div>
            
            <div class="mb-12 animate-fade-in-delay-2">
                <h2 class="text-6xl md:text-8xl font-bold tracking-tighter mb-4 leading-none">
                    ROBOTICS<br/>HACKATHON
                </h2>
                <p class="text-2xl font-light tracking-[0.3em] uppercase">June 14-15</p>
                <p class="text-lg font-bold text-red-700 mt-2">$15K PRIZES</p>
            </div>

            <div class="mb-12 animate-fade-in-delay-3">
                <a
                    href="https://huggingface.co/LeRobot-worldwide-hackathon"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-12 py-5 bg-black text-white font-bold text-lg rounded-full 
                           hover:bg-gray-800 hover:scale-110 
                           transition-all duration-300 shadow-2xl"
                >
                    JOIN NOW
                </a>
            </div>

            <!-- Social links -->
            <div class="flex justify-center space-x-6 animate-fade-in-delay-4">
                <a
                    href="https://discord.gg/m5Hknymurb"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="p-3 bg-black/10 backdrop-blur-sm rounded-full border border-black/20 
                           hover:bg-black/20 transition-all duration-300"
                    aria-label="Discord"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20.317 4.492c-1.53-.69-3.17-1.2-4.885-1.49a.075.075 0 0 0-.079.036c-.21.369-.444.85-.608 1.23a18.566 18.566 0 0 0-5.487 0 12.36 12.36 0 0 0-.617-1.23A.077.077 0 0 0 8.562 3c-1.714.29-3.354.8-4.885 1.491a.07.07 0 0 0-.032.027C.533 9.093-.32 13.555.099 17.961a.08.08 0 0 0 .031.055 20.03 20.03 0 0 0 5.993 2.98.078.078 0 0 0 .084-.026c.462-.62.874-1.275 1.226-1.963.021-.04.001-.088-.041-.104a13.201 13.201 0 0 1-1.872-.878.075.075 0 0 1-.008-.125c.126-.093.252-.19.372-.287a.075.075 0 0 1 .078-.01c3.927 1.764 8.18 1.764 12.061 0a.075.075 0 0 1 .079.009c.12.098.245.195.372.288a.075.075 0 0 1-.006.125c-.598.344-1.22.635-1.873.877a.075.075 0 0 0-.041.105c.36.687.772 1.341 1.225 1.962a.077.077 0 0 0 .084.028 19.963 19.963 0 0 0 6.002-2.981.076.076 0 0 0 .032-.054c.5-5.094-.838-9.52-3.549-13.442a.06.06 0 0 0-.031-.028zM8.02 15.278c-1.182 0-2.157-1.069-2.157-2.38 0-1.312.956-2.38 2.157-2.38 1.21 0 2.176 1.077 2.157 2.38 0 1.312-.956 2.38-2.157 2.38zm7.975 0c-1.183 0-2.157-1.069-2.157-2.38 0-1.312.955-2.38 2.157-2.38 1.21 0 2.176 1.077 2.157 2.38 0 1.312-.946 2.38-2.157 2.38z"/>
                    </svg>
                </a>
                <a
                    href="https://www.linkedin.com/company/north-star-agi"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="p-3 bg-black/10 backdrop-blur-sm rounded-full border border-black/20 
                           hover:bg-black/20 transition-all duration-300"
                    aria-label="LinkedIn"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</Layout>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in { animation: fade-in 1.2s ease-out forwards; }
    .animate-fade-in-delay-1 { animation: fade-in 1.2s ease-out 0.3s backwards; }
    .animate-fade-in-delay-2 { animation: fade-in 1.2s ease-out 0.6s backwards; }
    .animate-fade-in-delay-3 { animation: fade-in 1.2s ease-out 0.9s backwards; }
    .animate-fade-in-delay-4 { animation: fade-in 1.2s ease-out 1.2s backwards; }

    /* Remove scrollbar for cleaner look */
    body {
        overflow-x: hidden;
    }
</style>
